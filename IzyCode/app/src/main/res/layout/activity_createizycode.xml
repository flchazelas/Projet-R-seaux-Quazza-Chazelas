<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/saisie_text"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:maxLength="1000"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:hint="@string/editText_text"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/textview_remaining_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/getTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/resetIzyCode"
            android:layout_marginEnd="25dp"
            android:background="@drawable/button_state"
            android:text="@string/obtainIzyCode_button"
            android:textSize="25sp" />

        <Button
            android:id="@+id/resetIzyCode"
            android:padding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_state"
            android:gravity="end"
            android:text="@string/resetIzyCodeButton"
            android:textAlignment="center"
            android:textSize="25sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/textViewIzyCode"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center" />


</LinearLayout>